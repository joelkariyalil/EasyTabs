// manifest.json
{
  "manifest_version": 2,
  "name": "Tab Monitor",
  "version": "1.0",
  "description": "Logs information about open tabs",
  "permissions": [ "tabs" ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}